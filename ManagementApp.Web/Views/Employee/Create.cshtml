@{
    ViewData["Title"] = "Dodaj nowego pracownika";
}

<h2>Dodaj nowego pracownika</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <div class="form-group">
                <form asp-action="Create" method="post">

                    <div class="form-group">
                        <label>Imię</label>
                        <input class="form-control" name="FirstName" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Nazwisko</label>
                        <input class="form-control" name="LastName" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Nr. telefonu</label>
                        <input class="form-control" name="PhoneNumber" type="tel" />
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" name="Email" type="email" />
                    </div>

                    <div class="form-group">
                        <label>Ulica</label>
                        <input class="form-control" name="Street" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Miasto</label>
                        <input class="form-control" name="City" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Kod pocztowy</label>
                        <input class="form-control" name="PostalCode" type="number" />
                    </div>

                    <button asp-action="Create" type="submit" class="form-group">Dodaj</button>
                </form>
                <form asp-action="Index" method="get" class="form-inline">
                    <button asp-action="Index">Cofnij</button>
                </form>
            </div>
        </section>
    </div>
</div>