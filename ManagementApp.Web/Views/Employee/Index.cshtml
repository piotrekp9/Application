@model IEnumerable<ManagementApp.Web.ViewModel.EmployeeViewModel>


<h2>Lista Pracowników</h2>

@*<a asp-action="Create" ="/Employee/Create">Dodaj nowego pracownika</a>*@
<div class="form-group">
    <button asp-action="Create" class="form-group">Dodaj nowego pracownika</button>
</div>

<div class="form-group">
    <form asp-controller="Employee" asp-action="Index" method="get">
    <input type="text" name="filter" placeholder="Szukana fraza..." />
        <input type="submit" name="Search"/>
</form>
</div>
<div class="form-group">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Imie
                </th>
                <th>
                    Nazwisko
                </th>
                <th>
                    Zajęty
                </th>
                <th>
                    Email
                </th>
                <th>
                    Nr. telefonu
                </th>
                <th>
                    Ulica
                </th>
                <th>
                    Miasto
                </th>
                <th>
                    Kod pocztowy
                </th>
                <th>
                    Edytuj
                </th>
                <th>
                    Usuń
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => employee.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => employee.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => employee.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => employee.IsOccupied)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => employee.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => employee.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => employee.Street)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => employee.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => employee.PostalCode)
                    </td>
                    <td>
                        <button asp-action="Details">Edytuj</button>
                    </td>
                    <td>
                        <button asp-action="Delete">Usuń</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
