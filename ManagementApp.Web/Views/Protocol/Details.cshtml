@model ManagementApp.Web.ViewModel.Protocol.ProtocolDetailsViewModel
@using ManagementApp.Web.Data.Enums
@{
    ViewData["Title"] = "Edytuj protokół";
}

<h2>Edytuj protokół</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <div class="form-group">
                <form asp-action="Update" method="post">

                    <div class="form-group">
                        <label>Nazwa</label>
                        <input asp-for="@Model.Protocol.Name" class="form-control" name="Name" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Opis</label>
                        <input asp-for="@Model.Protocol.Description" class="form-control" name="Description" type="text" />
                    </div>


                    <div class="form-group">
                        <label>Podsumowanie</label>
                        <input asp-for="@Model.Protocol.Proclamation" class="form-control" name="Proclamation" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Czy pozytywny</label>
                        <input class="form-control" name="IsSuccessfull" type="checkbox" />
                    </div>

                    <div class="form-group">
                        <label>Data wystawienia</label>
                        <input asp-for="@Model.Protocol.DateOfIssue" class="form-control" name="DateOfIssue" type="date" />
                    </div>

                    <div class="form-group">
                        <label>Pogoda</label>
                        <input asp-for="@Model.Protocol.Weather" class="form-control" name="Weather" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Typ kwalifikacji</label>
                        <br />                        
                        <select class="form-control" asp-items="@Html.GetEnumSelectList<ProtocolType>()" asp-for="Protocol.ProtocolType"></select>
                    </div>

                    <div class="form-group">
                        <label>Pracownik wystawiający</label>
                        <br />
                        <select class="form-control" asp-items="Model.Employees" asp-for="Protocol.Employee"></select>
                    </div>

                    <div class="form-group">
                        <label>Wystawiony na zamówienie</label>
                        <br />
                        <select class="form-control" asp-items="Model.Orders" asp-for="Protocol.Order"></select>
                    </div>

                    <button asp-action="Update" type="submit" class="form-group">Dodaj</button>
                </form>
                <form asp-action="Index" method="get" class="form-inline">
                    <button asp-action="Index">Cofnij</button>
                </form>
            </div>
        </section>
    </div>
</div>