@using ManagementApp.Web.Data.Enums
@{
    ViewData["Title"] = "Dodaj nowy protokół";
}

<h2>Dodaj nowy protokół</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <div class="form-group">
                <form asp-action="Create" method="post">

                    <div class="form-group">
                        <label>Nazwa</label>
                        <input class="form-control" name="Name" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Opis</label>
                        <input class="form-control" name="Description" type="text" />
                    </div>


                    <div class="form-group">
                        <label>Podsumowanie</label>
                        <input class="form-control" name="Proclamation" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Czy pozytywny</label>
                        <input class="form-control" name="IsSuccessfull" type="checkbox" />
                    </div>

                    <div class="form-group">
                        <label>Data wystawienia</label>
                        <input class="form-control" name="DateOfIssue" type="date" />
                    </div>

                    <div class="form-group">
                        <label>Pogoda</label>
                        <input class="form-control" name="DateOfIssue" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Typ kwalifikacji</label>
                        <br />
                        @Html.DropDownList("ProtocolType", Html.GetEnumSelectList<ProtocolType>())
                    </div>

                    <button asp-action="Create" type="submit" class="form-group">Dodaj</button>
                </form>
                <form asp-action="Index" method="get" class="form-inline">
                    <button asp-action="Index">Cofnij</button>
                </form>
            </div>
        </section>
    </div>
</div>