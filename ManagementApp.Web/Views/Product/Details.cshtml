@model ManagementApp.Web.ViewModel.ProductViewModel
@using ManagementApp.Web.Data.Enums

@{
    ViewData["Title"] = "Edytuj produkt";
}

<h2>Edytuj produkt</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <div class="form-group">
                <form asp-action="Update" method="post">

                    <div class="form-group">
                        <label>Nazwa</label>
                        <input asp-for="Name" class="form-control" name="Name" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Opis</label>
                        <input asp-for="Description" class="form-control" name="Description" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Cena</label>
                        <input asp-for="Price" class="form-control" name="Price" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Typ kwalifikacji</label>
                        <br />
                        <select class="form-control" asp-items="@Html.GetEnumSelectList<QualificationType>()" asp-for="QualificationType"></select>
                    </div>

                    <button asp-action="Update" type="submit" class="form-group">Dodaj</button>
                </form>
                <form asp-action="Index" method="get" class="form-inline">
                    <button asp-action="Index">Cofnij</button>
                </form>
            </div>
        </section>
    </div>
</div>