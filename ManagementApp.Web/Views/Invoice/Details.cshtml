@model ManagementApp.Web.ViewModel.Invoice.InvoiceDetailsViewModel
@{
    ViewData["Title"] = "Edytuj dane faktury";
}

<h2>Edytuj dane faktury</h2>

<form asp-action="Update" method="post">

    <div class="row">
        <div class="col-md-4">
            <section>
                <div class="form-group">

                    <div class="form-group">
                        <label>Imię</label>
                        <input asp-for="@Model.Invoice.Id" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Nazwisko</label>
                        <input asp-for="@Model.Invoice.InvoiceNumber" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Nr. telefonu</label>
                        <input asp-for="@Model.Invoice." class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="@Model." class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Ulica</label>
                        <input asp-for="@Model." class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Miasto</label>
                        <input asp-for="@Model." class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Kod pocztowy</label>
                        <input asp-for="@Model.Invoice." class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div>
                        <label>
                            Klient
                        </label>
                        <select asp-items="Model.Clients"></select>
                    </div>

                    <div>
                        <button asp-action="AddClient">Dodaj klienta</button>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <div class="form-group">
        <button type="submit">Zapisz</button>
    </div>
    <div class="form-group">
        <button asp-action="Index">Cofnij</button>
    </div>
</form>
