@model ManagementApp.Web.ViewModel.Invoice.InvoiceCreateViewModel

@using ManagementApp.Web.Data.Enums
@{
    ViewData["Title"] = "Dodaj nową fakturę";
}

<h2>Dodaj nową fakturę</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <div class="form-group">
                <form asp-action="Create" method="post">

                    <div class="form-group">
                        <label>Nr. faktury</label>
                        <input class="form-control" name="InvoiceNumber" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Opis</label>
                        <input class="form-control" name="Description" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Nr. konta</label>
                        <input class="form-control" name="AccountNumber" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Typ płatności</label>
                        <select class="form-control" asp-items="@Html.GetEnumSelectList<PaymentType>()"></select>
                    </div>

                    <div class="form-group">
                        <label>Data wystawienia</label>
                        <input class="form-control" name="DateOfIssue" type="date" />
                    </div>

                    <div class="form-group">
                        <label>Kwota brutto</label>
                        <input class="form-control" name="PaymentWithoutTax" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Kwota netto</label>
                        <input class="form-control" name="PaymentWithTax" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Kwota podatku</label>
                        <input class="form-control" name="TaxPayment" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Stawka podatku</label>
                        <input class="form-control" name="TaxPayment" type="text" value="23%" readonly="readonly" />
                    </div>

                    <div class="form-group">
                        <label>Klient</label>
                        <br />
                        <select class="form-control" asp-items="Model.Clients"></select>
                    </div>

                    <div class="form-group">
                        <label>Zamówienie</label>
                        <br />
                        <select class="form-control" asp-items="Model.Orders"></select>
                    </div>

                    <button asp-action="Create" type="submit" class="form-group">Dodaj</button>
                </form>
                <form asp-action="Index" method="get" class="form-inline">
                    <button asp-action="Index">Cofnij</button>
                </form>
            </div>
        </section>
    </div>
</div>