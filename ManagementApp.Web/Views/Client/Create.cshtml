@{
    ViewData["Title"] = "Dodaj nowego klienta";
}

<h2>Dodaj nowego klienta</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <div class="form-group">
                <form asp-action="Create" method="post">

                    <div class="form-group">
                        <label>Nazwa</label>
                        <input class="form-control" name="Name" type="text" />
                    </div>

                    <div class="form-group">
                        <label>PESEL</label>
                        <input class="form-control" name="PESEL" type="text" />
                    </div>

                    <div class="form-group">
                        <label>NIP</label>
                        <input class="form-control" name="NIP" type="text" />
                    </div>

                    <div class="form-group">
                        <label>REGON</label>
                        <input class="form-control" name="REGON" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Nr. telefonu</label>
                        <input class="form-control" name="PhoneNumber" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" name="Email" type="email"/>
                    </div>

                    <div class="form-group">
                        <label>Ulica</label>
                        <input class="form-control" name="Street" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Miasto</label>
                        <input class="form-control" name="City" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Kod pocztowy</label>
                        <input class="form-control" name="PostalCode" type="text" />
                    </div>

                    <button asp-action="Create" type="submit" class="form-group">Dodaj</button>
                </form>
                <form asp-action="Index" method="get" class="form-inline">
                    <button asp-action="Index">Cofnij</button>
                </form>
            </div>
        </section>
    </div>
</div>