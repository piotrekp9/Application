@using ManagementApp.Web.Data.Enums
@{
    ViewData["Title"] = "Dodaj nową kwalifikację";
}

<h2>Dodaj nową kwalifikację</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <div class="form-group">
                <form asp-action="Create" method="post">

                    <div class="form-group">
                        <label>Nazwa</label>
                        <input class="form-control" name="Name" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Opis</label>
                        <input class="form-control" name="Description" type="text" />
                    </div>

                    <div class="form-group">
                        <label>Typ kwalifikacji</label>
                        <br />
                        @Html.DropDownList("QualificationType", Html.GetEnumSelectList<QualificationType>())
                    </div>

                    <button asp-action="Create" type="submit" class="form-group">Dodaj</button>
                </form>
                <form asp-action="Index" method="get" class="form-inline">
                    <button asp-action="Index">Cofnij</button>
                </form>
            </div>
        </section>
    </div>
</div>